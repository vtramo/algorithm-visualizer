<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.ui.Controller">
    <left>
        <VBox>
   
            <Button onMouseClicked="#onAddClicked" text="Add" textFill="#795252" />
         <Spinner fx:id="addValueSpinner" layoutX="10.0" layoutY="58.0" />
            <Button onMouseClicked="#onSearchButtonClicked" text="Search" />
            <Spinner fx:id="searchValueSpinner" />
            <Button onMouseClicked="#onRemoveButtonClicked" text="Remove" />
            <Spinner fx:id="removeValueSpinner" />

            <Slider fx:id="algorithmDisplaySpeedSlider" majorTickUnit="10" minorTickCount="10" onMouseDragged="#onAlgorithmDisplaySpeedSliderValueChanged" showTickLabels="true">
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding></Slider>
        </VBox>
    </left>
   <right>
      <Pane fx:id="graph" onMousePressed="#onGraphPressed" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color:lightblue;" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
